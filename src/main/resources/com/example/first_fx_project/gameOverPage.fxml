<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Circle?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.first_fx_project.GameOverController">

    <!-- Game Over Label -->
    <Label layoutX="281.0" layoutY="150.0" style="-fx-font-size: 48px; -fx-text-fill: red;" text="Game Over" />

    <!-- Score Label -->
    <Label layoutX="309.0" layoutY="256.0" style="-fx-font-size: 24px; -fx-text-fill: grey;" text="Your Score:" />
   <Circle fill="#4CAF50" layoutX="473.0" layoutY="398.0" radius="56.0" style="-fx-fill: red;" /> <!-- Replace with your score -->

          <!-- Restart Button -->
    <Circle fill="#4CAF50" layoutX="330.0" layoutY="398.0" radius="56.0" />
   <Label fx:id="gameOverScore" layoutX="445.0" layoutY="249.0" prefHeight="50.0" prefWidth="74.0" text="1000" />
    <Button accessibleText="Restart" layoutX="285.0" layoutY="378.0" mnemonicParsing="false" onAction="#switchToGamePlayPage" prefHeight="40.0" prefWidth="90.0" style="-fx-font-size: 18px; -fx-text-fill: white; -fx-background-color: #4CAF50;" text="Restart" />

    <!-- Exit Button -->
    <Button accessibleText="Exit" layoutX="423.0" layoutY="378.0" mnemonicParsing="false" onAction="#switchToMenuPage" prefHeight="40.0" prefWidth="100.0" style="-fx-font-size: 18px; -fx-text-fill: white; -fx-background-color: red;" text="Home" />
</AnchorPane>
